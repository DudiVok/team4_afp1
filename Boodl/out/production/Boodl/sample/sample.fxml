<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="40" right="40" bottom="40"></Insets></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="200" maxWidth="Infinity" halignment="RIGHT"></ColumnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="200" maxWidth="Infinity" hgrow="ALWAYS"></ColumnConstraints>
    </columnConstraints>
    <Label text="Bejelentkezés" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="1" GridPane.halignment="CENTER">
        <font>
            <Font name="Arial" size="30"></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"></Label>
    <TextField fx:id="Email" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2"></TextField>
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"></Label>
    <PasswordField fx:id="Password" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3"></PasswordField>
    <Button fx:id="btReg" text="Regisztráció" prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.rowSpan="1" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
    <Button fx:id="btLogin" text="Bejelentkezés" prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.rowSpan="1" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
    <Button fx:id="btFor" text="Elfelejtett jelszó" prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.rowSpan="1" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
</GridPane>