<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Reg">
    <padding><Insets bottom="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="200" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <Label text="Regisztráció" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowSpan="2">
        <font>
            <Font name="Arial" size="30" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="Email" maxWidth="200" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <PasswordField fx:id="Password" maxWidth="200" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button fx:id="btReg" defaultButton="true" onAction="#bt_Reg" prefHeight="40" prefWidth="100" text="Regisztráció" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
    <Button fx:id="btLogin" defaultButton="true" onAction="#bt_Log" prefHeight="40" prefWidth="100" text="Bejelentkezés" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

</GridPane>
